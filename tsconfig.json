{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "module": "commonjs",
    "allowJs": true,
    "outDir": "dist/",
    "rootDir": "src/",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "socket.io-client",
      "jest",
      "node"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
//    "./src/**/*.spec.tsx",
    "./src/setupTests.js"
  ]
}
